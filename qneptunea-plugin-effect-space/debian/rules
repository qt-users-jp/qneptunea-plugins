#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export DH_OPTIONS

QNEPTUNEA_PLUGINS_ROOTDIR=opt/qneptunea/plugins
QNEPTUNEA_PLUGINDIR_SERVICE=$(QNEPTUNEA_PLUGINS_ROOTDIR)/service
QNEPTUNEA_PLUGINDIR_PREVIEW=$(QNEPTUNEA_PLUGINS_ROOTDIR)/preview
QNEPTUNEA_PLUGINDIR_SETTINGS=$(QNEPTUNEA_PLUGINS_ROOTDIR)/settings
QNEPTUNEA_PLUGINDIR_TWEET=$(QNEPTUNEA_PLUGINS_ROOTDIR)/tweet
QNEPTUNEA_PLUGINDIR_TRANSLATION=$(QNEPTUNEA_PLUGINS_ROOTDIR)/translation

#Theme plugin is not suitable for deb distribute structue?
#export QNEPTUNEA_PLUGINDIR_THEME=$(QNEPTUNEA_PLUGINS_ROOTDIR)/theme


configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp  
	dh_testdir

	# Add here commands to compile the package.
	#$(MAKE)
	#docbook-to-man debian/qneptunea-plugin-effect-space.sgml > qneptunea-plugin-effect-space.1

	touch $@

clean: 
	dh_testdir
	dh_testroot
	#rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	#$(MAKE) clean

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/qneptunea-plugin-effect-space.
	#$(MAKE) DESTDIR="$(CURDIR)"/debian/qneptunea-plugin-effect-space install
	
	# Make directory for plugin install dir tree
	mkdir -p $(CURDIR)/debian/qneptunea-plugin-effect-space/$(QNEPTUNEA_PLUGINDIR_TWEET)

	# Copy plugin files to install dir tree
	cp -a $(CURDIR)/plugins/tweet/* $(CURDIR)/debian/qneptunea-plugin-effect-space/$(QNEPTUNEA_PLUGINDIR_TWEET)/

	# You can also specify this file by file.

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
#	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
